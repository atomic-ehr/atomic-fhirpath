{
  "mcpServers": {
    "language-server": {
      "command": "mcp-language-server",
      "args": [
        "--workspace",
        "/root/atomic-fhirpath",
        "--lsp",
        "typescript-language-server",
        "--",
        "--stdio",
        "--ignore",
        "antlr/**"
      ]
    },
    "bun": {
      "command": "bunx",
      "args": ["-y", "mcp-bun@latest"],
      "env": {
        "DISABLE_NOTIFICATIONS": "true"
      }
    }
  }
}
  

